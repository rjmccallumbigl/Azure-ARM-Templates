{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "SharedVmConfig": {
      "type": "object"
    },
    "vmName": {
      "type": "string"
    },
    "nicName": {
      "type": "string"
    },
    "modulesURL": {
      "type": "string"
    },
    "configurationFunction": {
      "type": "object"
    }
  },
  "variables": {},
  "resources": [
    {
      "apiVersion": "2021-11-01",
      "type": "Microsoft.Compute/virtualMachines",
      "name": "[parameters('vmName')]",
      "location": "[parameters('SharedVmConfig').location]",
      "properties": {
        "hardwareProfile": {
          "vmSize": "[parameters('SharedVmConfig').vmSize]"
        },
        "osProfile": {
          "computerName": "[parameters('vmName')]",
          "adminUsername": "[parameters('SharedVmConfig').adminUsername]",
          "adminPassword": "[parameters('SharedVmConfig').adminPassword]"
        },
        "storageProfile": {
          "imageReference": {
            "publisher": "MicrosoftWindowsServer",
            "offer": "WindowsServer",
            "sku": "[parameters('SharedVmConfig').serverOS]",
            "version": "latest"
          },
          "osDisk": {
            "createOption": "FromImage"
          },
          "dataDisks": [
            {
              "createOption": "Empty",
              "diskSizeGB": 20,
              "lun": 0
            }
          ]
        },
        "networkProfile": {
          "networkInterfaces": [
            {
              "id": "[resourceId('Microsoft.Network/networkInterfaces',parameters('nicName'))]"
            }
          ]
        },
        "diagnosticsProfile": {
          "bootDiagnostics": {
            "enabled": true,
            "storageUri": "[reference(concat('Microsoft.Storage/storageAccounts/',parameters('SharedVmConfig').storageAccountNamePrefix),'2017-06-01').primaryEndpoints.blob]"
          }
        }
      },
      "resources": [
        {
          "type": "extensions",
          "apiVersion": "2021-04-01",
          "name": "CustomScriptExtension",
          "location": "[parameters('SharedVmConfig').location]",
          "dependsOn": [
            "[parameters('vmName')]",
            "[resourceId('Microsoft.Compute/virtualMachines/extensions', parameters('vmName'), 'InstallDomainController')]"
          ],
          "properties": {
            "publisher": "Microsoft.Compute",
            "type": "CustomScriptExtension",
            "typeHandlerVersion": "1.8",
            "autoUpgradeMinorVersion": true,
            "settings": {
              // "commandToExecute": "$pass=(ConvertTo-SecureString -AsPlainText -Force ${Env:Password}); $name=${Env:UserName}; New-ADUser -Name $name -Accountpassword $pass -Enabled $true; get-aduser -Filter \"Name -like '$name'\" | Enable-ADAccount;"
              "commandToExecute": "[concat('powershell \"$pass=(ConvertTo-SecureString -AsPlainText -Force ''', parameters('SharedVmConfig').domainPassword, '''); $name=''',parameters('SharedVmConfig').createdDomainUserName,'''; New-ADUser -Name $name -Accountpassword $pass -Enabled $true; get-aduser -Filter \"\"\"Name -like ''$name'' \"\"\" | Enable-ADAccount; \"')]"
            }
          }
        }
      ]
    },
    {
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "name": "[concat(parameters('vmName'),'/InstallDomainController')]",
      "apiVersion": "2021-11-01",
      "location": "[parameters('SharedVmConfig').location]",
      "dependsOn": [
        "[parameters('vmName')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "protectedSettings": {
          "Items": {
            "AdminPassword": "[parameters('SharedVmConfig').adminPassword]",
            "configurationUrlSasToken": "[parameters('SharedVmConfig').SasToken]"
          }
        },
        "settings": {
          "modulesUrl": "[concat(parameters('modulesURL'),'/CreateADPDC.ps1.zip')]",
          "sasToken": "[parameters('SharedVmConfig').SasToken]",
          "wmfVersion": "latest",
          "configurationFunction": "[parameters('configurationFunction').CreateADPDC]",
          "Properties": {
            "DomainName": "[parameters('SharedVmConfig').domainName]",
            "AdminCreds": {
              "UserName": "[parameters('SharedVmConfig').adminUserName]",
              "Password": "PrivateSettingsRef:AdminPassword"
            }
          }
        }
      }
    }
  ]
}
